<odoo>
    <record id="view_spp_event_agri_land_ownership_use_form" model="ir.ui.view">
        <field name="name">view_spp_event_agri_land_ownership_use_form</field>
        <field name="model">spp.event.agri.land.ownership.use</field>
        <field name="priority">200</field>
        <field name="arch" type="xml">
            <form string="Event Data: Agriculture Land Ownership and Use" duplicate="0">
                <sheet>
                    <group>
                        <field name="survey_sched" required="1" />
                    </group>

                    <div class="row mt16 o_settings_container" name="container_1">
                        <div class="col-8 o_setting_box" name="crops_in_irrigated_land">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="crops_in_irrigated_land" />
                                <div>
                                </div>
                                <field name="crops_in_irrigated_land" />
                            </div>
                        </div>
                        <div class="col-4 o_setting_box" name="crops_in_irrigated_land_ha">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="crops_in_irrigated_land_ha" />
                                <div>
                                </div>
                                <field name="crops_in_irrigated_land_ha" />
                            </div>
                        </div>
                    </div>
                    <notebook>
                        <page string="Land Ownerships and Uses" name="land_ownerships">
                            <field name="land_ownership_ids">
                                <tree>
                                    <field name="land_ownership_use_id" invisible="1" />
                                    <field name="land_ownership" />
                                    <field name="irrigated_puddy" />
                                    <field name="rainfed_puddy" />
                                    <field name="upland_agriculture" />
                                    <field name="coffee_tea_plantation" />
                                    <field name="cardamom_plantation" />
                                    <field name="orchard" />
                                    <field name="pasture" />
                                    <field name="fallow_land" />
                                    <field name="forest" />
                                    <field name="land_rent_oth_hh" />
                                    <field name="oth_agri_land_owned_by_hh" />
                                    <field name="total" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_spp_event_agri_land_ownership_use" model="ir.actions.act_window">
        <field name="name">Event Data: Agriculture Land Ownership and Use</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">spp.event.agri.land.ownership.use</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>

    </record>

    <record id="action_spp_event_agri_land_ownership_use_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_spp_event_agri_land_ownership_use_form" />
        <field name="act_window_id" ref="action_spp_event_agri_land_ownership_use" />
    </record>

  </odoo>
