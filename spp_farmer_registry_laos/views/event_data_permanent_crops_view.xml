<odoo>
    <record id="view_spp_event_permanent_crops_form" model="ir.ui.view">
        <field name="name">view_spp_event_permanent_crops_form</field>
        <field name="model">spp.event.permanent.crops</field>
        <field name="priority">200</field>
        <field name="arch" type="xml">
            <form string="Event Data: Permanent crops production" duplicate="0">
                <sheet>
                    <div class="row mt16 o_settings_container" name="container_0">
                        <div class="col-4 o_setting_box" name="survey_sched">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="survey_sched" />
                                <div>
                                </div>
                                <field name="survey_sched" />
                            </div>
                        </div>
                    </div>
                    <notebook>
                        <page string="Produced Crops" name="crops_produce">
                            <field name="crop_prod_ids">
                                <tree editable="bottom">
                                    <field name="crop_permanent_id" column_invisible="1" />
                                    <field name="crop_id" />
                                    <field name="harvest_area" />
                                    <field name="harvest_amt_kg" />
                                    <field name="sales_qty_kg" />
                                    <field name="sales_price_lak_kg" />
                                    <field name="sales_value" />
                                    <field name="contract_farming" />
                                    <field name="partner_name" />
                                </tree>
                            </field>
                        </page>
                        <page string="Production Cost" name="production_cost">
                            <field name="crop_cost_ids">
                                <tree editable="bottom">
                                    <field name="crop_permanent_id" column_invisible="1" />
                                    <field name="crop_id" />
                                    <field name="labor_input_days" />
                                    <field name="preparation_farmland" />
                                    <field name="seeds" />
                                    <field name="labor_cost" />
                                    <field name="fertilizer" />
                                    <field name="pesticide" />
                                    <field name="herbicide_oth" />
                                    <field name="water_fee" />
                                    <field name="total_equipment" />
                                    <field name="oth_fees" />
                                    <field name="total_prod_cost" />
                                </tree>
                            </field>
                        </page>
                        <page string="Technologies/techniques" name="technologies">
                            <field name="crop_tech_ids">
                                <tree editable="bottom">
                                    <field name="crop_permanent_id" column_invisible="1" />
                                    <field name="crop_id" />
                                    <field name="organic_fertilizer" />
                                    <field name="greenhouse" />
                                    <field name="multing" />
                                    <field name="irrigation" />
                                    <field name="water_pump" />
                                    <field name="drip_irrigation" />
                                    <field name="sprinkler" />
                                    <field name="machine_harvest" />
                                    <field name="dry_processing" />
                                    <field name="post_harvest_treatment" />
                                    <field name="other" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_spp_event_permanent_crops" model="ir.actions.act_window">
        <field name="name">Event Data: Permanent crops production</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">spp.event.permanent.crops</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>

    </record>

    <record id="action_spp_event_permanent_crops_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_spp_event_permanent_crops_form" />
        <field name="act_window_id" ref="action_spp_event_permanent_crops" />
    </record>

