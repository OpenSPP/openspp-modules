<odoo>
    <record id="view_spp_event_wash_ind_form" model="ir.ui.view">
        <field name="name">view_spp_event_wash_ind_form</field>
        <field name="model">spp.event.wash.ind</field>
        <field name="priority">200</field>
        <field name="arch" type="xml">
            <form string="Event Data: WASH Indicators" duplicate="0">
                <sheet>
                    <div class="row mt16 o_settings_container" name="container_0">
                        <div class="col-4 o_setting_box" name="survey_sched">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="survey_sched" />
                                <div>
                                </div>
                                <field name="survey_sched" />
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" name="container_1">
                        <div class="col-4 o_setting_box" name="water_sources">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="water_sources" />
                                <div>
                                </div>
                                <field name="water_sources" />
                            </div>
                        </div>
                        <div class="col-4 o_setting_box" name="latrine_condition">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="latrine_condition" />
                                <div>
                                </div>
                                <field name="latrine_condition" />
                            </div>
                        </div>
                        <div class="col-4 o_setting_box" name="handwashing_facility">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="handwashing_facility" />
                                <div>
                                </div>
                                <field name="handwashing_facility" />
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_spp_event_wash_ind" model="ir.actions.act_window">
        <field name="name">Event Data: WASH Indicators</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">spp.event.wash.ind</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>

    </record>

    <record id="action_spp_event_wash_ind_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_spp_event_wash_ind_form" />
        <field name="act_window_id" ref="action_spp_event_wash_ind" />
    </record>

  </odoo>
