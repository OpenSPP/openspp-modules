<odoo>
    <record id="create_event_agri_ds_form_view" model="ir.ui.view">
        <field name="name">create_event_agri_ds_form_view</field>
        <field name="model">spp.create.event.agri.ds.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="row mt16 o_settings_container" name="container_0">
                        <div class="col-4 o_setting_box" name="survey_sched">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="survey_sched" />
                                <div>
                                </div>
                                <field name="survey_sched" required="1"/>
                            </div>
                        </div>
                    </div>
                    <notebook>
                        <page string="Crops produced in Cold DS" name="crops_produce">
                            <field name="agri_prod_ids">
                                <tree editable="bottom">
                                    <field name="agri_ds_id" invisible="1" />
                                    <field name="crop_id" />
                                    <field name="harvest_area" />
                                    <field name="harvest_amt_kg" />
                                    <field name="sales_qty_kg" />
                                    <field name="sales_price_lak_kg" />
                                    <field name="sales_value" />
                                    <field name="contract_farming" />
                                    <field name="partner_name" />
                                </tree>
                            </field>
                        </page>
                        <page string="Production cost per crop in Cold DS" name="production_cost">
                            <field name="agri_cost_ids">
                                <tree editable="bottom">
                                    <field name="agri_ds_id" invisible="1" />
                                    <field name="crop_id" />
                                    <field name="labor_input_days" />
                                    <field name="preparation_farmland" />
                                    <field name="seeds" />
                                    <field name="labor_cost" />
                                    <field name="fertilizer" />
                                    <field name="pesticide" />
                                    <field name="herbicide_oth" />
                                    <field name="water_fee" />
                                    <field name="total_equipment" />
                                    <field name="oth_fees" />
                                    <field name="total_prod_cost" />
                                </tree>
                            </field>
                        </page>
                        <page
                            string="Technologies/techniques applied for crop production in Cold DS"
                            name="technologies"
                        >
                            <field name="agri_tech_ids">
                                <tree editable="bottom">
                                    <field name="agri_ds_id" invisible="1" />
                                    <field name="crop_id" />
                                    <field name="organic_fertilizer" />
                                    <field name="greenhouse" />
                                    <field name="multing" />
                                    <field name="irrigation" />
                                    <field name="water_pump" />
                                    <field name="drip_irrigation" />
                                    <field name="sprinkler" />
                                    <field name="machine_harvest" />
                                    <field name="dry_processing" />
                                    <field name="post_harvest_treatment" />
                                    <field name="other" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <field name="event_id" invisible="1" />
                <footer>
                    <button name="create_event" string="Save" type="object" class="oe_highlight" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
