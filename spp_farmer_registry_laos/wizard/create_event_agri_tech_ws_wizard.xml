<odoo>
    <record id="create_event_agri_tech_ws_form_view" model="ir.ui.view">
        <field name="name">create_event_agri_tech_ws_form_view</field>
        <field name="model">spp.create.event.agri.tech.ws.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <notebook>
                        <page string="Agricultural Technologies" name="agri_tech">
                            <field name="agri_prod_sales_cost_tech_ids">
                                <tree editable="bottom">
                                    <field name="agri_prod_sales_cost_tech_id" invisible="1" />
                                    <field name="crop_id" />
                                    <field name="org_felt_pest_herb" />
                                    <field name="greenhouse" />
                                    <field name="multing" />
                                    <field name="irrigation_normal" />
                                    <field name="water_pump" />
                                    <field name="drip_irrigation" />
                                    <field name="sprinkler" />
                                    <field name="machine_harvest" />
                                    <field name="dry_processing" />
                                    <field name="post_harvest_treatment" />
                                    <field name="other" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <field name="event_id" invisible="1" />
                <footer>
                    <button name="create_event" string="Save" type="object" class="oe_highlight" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
