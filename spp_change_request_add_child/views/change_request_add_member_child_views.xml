<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="spp_change_request_add_member_child_view_form" model="ir.ui.view">
        <field name="name">spp.change.request.add.member.child.view.form</field>
        <field name="model">spp.change.request.add.member.child</field>
        <field name="arch" type="xml">
            <form string="Add Member">
                <sheet>
                    <h1>
                        <label for="parent_id" />
                        <field name="parent_id" />
                    </h1>
                    <h3>
                        <label for="full_name" />
                        <field name="full_name" />
                    </h3>
                    <group>
                        <group>
                            <field name="given_name" />
                        </group>
                        <group>
                            <field name="family_name" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="birthdate" />
                            <field name="age" />
                        </group>
                        <group>
                            <field name="gender" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="phone" />
                        </group>
                        <group>
                            <field name="kind" widget="many2many_tags" />
                            <field
                                name="relation_to_head"
                                attrs="{'required': [('kind', '=', [])], 'invisible': [('kind', '!=', [])]}"
                            />
                            <field
                                name="applicant_relation"
                                attrs="{'required': ['|', ('age', '&lt;', 18), ('age', '=', False)]}"
                            />
                        </group>
                    </group>
                    <group>
                        <field name="birth_place" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
