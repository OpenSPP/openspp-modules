                                <button
                                    type="object"
                                    class="btn-primary"
                                    icon="fa-plus"
                                    name="create_journal"
                                    string="Create New Journal"
                                    states="active"
                                />
                            </group>
                        </page>
                        <field name="date_ended" invisible="1" />
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
