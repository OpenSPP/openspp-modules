<odoo>
    <record id="view_service_points_custom_spp_program_form" model="ir.ui.view">
        <field name="name">view_service_points_custom_spp_program_form</field>
        <field name="model">spp.service.point</field>
        <field name="inherit_id" ref="spp_service_points.view_service_points_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='disabled_reason']" position="after">
                <field
                    name="product_ids"
                    string="Products"
                    attrs="{'readonly':[('is_disabled','=',True)]}"
                    widget="many2many_tags"
                    options="{'no_open':True,'no_edit':True,'no_create':True}"
                    colspan="4"
                />
            </xpath>
        </field>
    </record>

</odoo>
