<odoo>
    <record id="change_request_add_children_tree" model="ir.ui.view">
        <field name="name">change_request_add_children_tree</field>
        <field name="model">spp.change.request.add.children</field>
        <field name="priority">0</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="registrant_id" />
                <field name="family_name" />
                <field name="given_name" />
                <field name="addl_name" />
                <field name="gender" />
                <field name="kind" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <record id="view_change_request_add_children_form" model="ir.ui.view">
        <field name="name">view_change_request_add_children_form</field>
        <field name="model">spp.change.request.add.children</field>
        <field name="priority">0</field>
        <field name="arch" type="xml">
            <form string="Add Children Change Request">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title mb24">
                        <label for="registrant_id" string="Group:" />
                        <h1>
                            <field name="registrant_id" readonly="1" />
                        </h1>
                        <div class="o_row">
                        </div>
                    </div>
                    <group colspan="4" col="4" string="">
                        <field name="family_name" />
                        <field name="given_name" />
                        <field name="addl_name" />
                        <field name="gender" />
                        <field name="birth_place" colspan="4" />
                        <field name="birthdate_not_exact" widget="boolean_toggle" />
                        <field name="birthdate" />
                        <field name="address" colspan="4" />
                        <field
                            name="kind"
                            widget="many2many_tags"
                            options="{'no_open':True, 'no_create_edit':True, 'no_create':True, 'no_quick_create':True}"
                            colspan="4"
                        />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
