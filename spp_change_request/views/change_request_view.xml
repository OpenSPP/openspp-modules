<odoo>
    <record id="view_change_request_tree" model="ir.ui.view">
        <field name="name">view_change_request_tree</field>
        <field name="model">spp.change.request</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name" />
                <field name="date_requested" />
                <field name="write_uid" string="Requested By" />
                <field name="request_type" />
                <field name="group_id" />
                <field name="request_type_ref_id" invisible="1" />
                <field name="validator_id" />
                <field name="date_validated" />
                <field name="approver_id" />
                <field name="date_approved" />
                <field name="company_id" groups="base.group_multi_company" />
                <field
                    name="state"
                    decoration-info="state=='draft'"
                    decoration-primary="state=='submitted'"
                    decoration-warning="state=='validated'"
                    decoration-success="state=='approved'"
                    decoration-danger="state=='cancelled'"
                    widget="badge"
                    string="State"
                />
            </tree>
        </field>
    </record>

    <record id="view_change_request_form" model="ir.ui.view">
        <field name="name">view_change_request_form</field>
        <field name="model">spp.change.request</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Change Request">
                <header>
                    <button
                        name="submit_request"
                        type="object"
                        string="Submit"
                        icon="fa-envelope-o"
                        class="btn-primary"
                        states="draft"
                    />
                    <button
                        name="validate_request"
                        type="object"
                        string="Validate"
                        icon="fa-undo"
                        class="btn-warning"
                        states="submitted"
                    />
                    <button
                        name="approve_request"
                        type="object"
                        string="Approve"
                        icon="fa-approve"
                        class="btn-success"
                        states="validated"
                    />
                    <button
                        name="cancel_request"
                        type="object"
                        string="Cancel"
                        icon="fa-download"
                        class="btn-danger"
                        states="validated"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,submitted,validated,approved"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <widget
                        name="web_ribbon"
                        title="Draft"
                        bg_color="bg-info"
                        attrs="{'invisible': [('state', '!=', 'draft')]}"
                    />
                    <widget
                        name="web_ribbon"
                        title="Submitted"
                        bg_color="bg-primary"
                        attrs="{'invisible': [('state', '!=', 'submitted')]}"
                    />
                    <widget
                        name="web_ribbon"
                        title="Validated"
                        bg_color="bg-warning"
                        attrs="{'invisible': [('state', '!=', 'validated')]}"
                    />
                    <widget
                        name="web_ribbon"
                        title="Approved"
                        bg_color="bg-success"
                        attrs="{'invisible': [('state', '!=', 'approved')]}"
                    />
                    <widget
                        name="web_ribbon"
                        title="Cancelled"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('state', '!=', 'cancelled')]}"
                    />
                    <div class="oe_title mb24">
                        <label for="name" string="Request #:" />
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                        <label for="request_type" string="Request Type:" />
                        <h2>
                            <field name="request_type" attrs="{'readonly':[('state','!=','draft')]}" />
                        </h2>
                        <label for="group_id" string="Group:" />
                        <h2>
                            <field
                                name="group_id"
                                options="{'no_create': True,'no_open':True}"
                                attrs="{'readonly':[('state','!=','draft')]}"
                                class="oe_inline"
                            />
                            <button
                                name="create_request_detail"
                                type="object"
                                string="Request Detail"
                                icon="fa-external-link "
                                class="btn-primary"
                                attrs="{'invisible':[('request_type_ref_id','!=',False)]}"
                            />
                            <button
                                name="open_change_request_form"
                                type="object"
                                string="Open Details"
                                icon="fa-external-link "
                                class="btn-success"
                                attrs="{'invisible':[('request_type_ref_id','=',False)]}"
                            />
                        </h2>
                        <div class="o_row">
                            <label for="company_id" string="Company: " groups="base.group_multi_company" />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                                options="{'no_create': True}"
                                force_save="1"
                                attrs="{'readonly':[('state','!=','draft')]}"
                            />
                        </div>
                    </div>
                    <group colspan="4" col="4">
                        <field name="date_requested" readonly="1" />
                        <field
                            name="write_uid"
                            string="Requested By"
                            options="{'no_create': True,'no_open':True}"
                            readonly="1"
                        />
                        <field name="date_validated" readonly="1" />
                        <field
                            name="validator_id"
                            options="{'no_create': True,'no_open':True}"
                            readonly="1"
                        />
                        <field name="date_approved" readonly="1" />
                        <field name="approver_id" options="{'no_create': True,'no_open':True}" readonly="1" />
                    </group>
                    <field name="request_type_ref_id" invisible="1" />
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="change_request_filter" model="ir.ui.view">
        <field name="name">change_request_filter</field>
        <field name="model">spp.change.request</field>
        <field name="priority" eval="1" />
        <field name="arch" type="xml">
            <search string="Search Change Request">
                <field name="name" />
                <field name="group_id" />
                <field name="request_type_ref_id" />
                <field name="write_uid" string="Submitted By" />
                <field name="validator_id" />
                <field name="approver_id" />
                <group expand="0" string="Group By">
                    <filter
                        string="Validator"
                        name="grp_validator_id"
                        context="{'group_by': 'validator_id'}"
                    />
                    <filter string="Approver" name="grp_approver_id" context="{'group_by': 'approver_id'}" />
                    <filter string="Company" name="grp_company_id" context="{'group_by': 'company_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="action_change_request" model="ir.actions.act_window">
        <field name="name">Change Requests</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">spp.change.request</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="change_request_filter" />
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new change request!
            </p><p>
                Click the create button to enter a new change request.
            </p>
        </field>
    </record>

    <record id="action_change_request_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_change_request_tree" />
        <field name="act_window_id" ref="action_change_request" />
    </record>

    <record id="action_change_request_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_change_request_form" />
        <field name="act_window_id" ref="action_change_request" />
    </record>

    <menuitem
        id="menu_change_request"
        name="List"
        action="action_change_request"
        parent="g2p_change_request_menu_root"
        sequence="0"
    />

</odoo>
