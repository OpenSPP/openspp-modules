<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_import_data_house_visit_form" model="ir.ui.view">
        <field name="name">view_import_data_house_visit_form</field>
        <field name="model">spp.event.data.import</field>
        <field name="inherit_id" ref="spp_event_data.view_spp_event_data_import_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='raw_data']" position="inside">
                <field
                    name="spp_event_house_visit"
                    readonly="1"
                    attrs="{'invisible':[('event_data_model','!=','spp.event.house.visit')]}"
                >
                    <tree>
                        <field name="registrant_given_name" />
                        <field name="registrant_family_name" />
                        <field name="summary" />
                        <field name="is_farm" />
                        <field name="farm_size_acre" />
                        <field name="number_of_pigs" />
                        <field name="number_of_cows" />
                        <field name="no_food_stock" />
                        <field name="disabled" />
                        <field
                            name="state"
                            decoration-secondary="state=='New'"
                            decoration-primary="state in ('Validated', 'Updated')"
                            decoration-success="state=='Posted'"
                            decoration-danger="state=='Error'"
                            widget="badge"
                        />
                        <field name="remarks" />
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

    <record id="view_import_data_phone_survey_form" model="ir.ui.view">
        <field name="name">view_import_data_phone_survey_form</field>
        <field name="model">spp.event.data.import</field>
        <field name="inherit_id" ref="spp_event_data.view_spp_event_data_import_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='raw_data']" position="inside">
                <field
                    name="spp_event_phone_survey"
                    readonly="1"
                    attrs="{'invisible':[('event_data_model','!=','spp.event.phone.survey')]}"
                >
                    <tree>
                        <field name="registrant_given_name" />
                        <field name="registrant_family_name" />
                        <field name="summary" />
                        <field name="description" />
                        <field
                            name="state"
                            decoration-secondary="state=='New'"
                            decoration-primary="state in ('Validated', 'Updated')"
                            decoration-success="state=='Posted'"
                            decoration-danger="state=='Error'"
                            widget="badge"
                        />
                        <field name="remarks" />
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
