        <field name="model">res.partner</field>
        <field name="inherit_id" ref="spp_farmer_registry_default_ui.view_farm_individual_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='div_birthdate']" position="inside">
                <div class="col-6 o_setting_box" name="div_household_size">
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="household_size" />
                        <div>
                        </div>
                        <field name="household_size" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
