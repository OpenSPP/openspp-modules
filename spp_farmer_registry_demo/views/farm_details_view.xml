<odoo>
    <record id="view_spp_farm_details_tree" model="ir.ui.view">
        <field name="name">view_spp_farm_details_tree</field>
        <field name="model">spp.farm.details</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="farm_id" column_invisible="1" />
                <field name="farm_type" />
                <field name="farm_total_size" />
                <field name="farm_size_under_crops" />
                <field name="farm_size_under_livestock" />
                <field name="farm_size_leased_out" />
                <field name="farm_size_idle" />
                <field name="legal_status" />
            </tree>
        </field>
    </record>

    <record id="view_spp_farm_details_form" model="ir.ui.view">
        <field name="name">view_spp_farm_details_form</field>
        <field name="model">spp.farm.details</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form>
                <header>

                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title" name="title">
                        <h1>
                            <label for="farm_id" string="Farm" />
                        </h1>
                        <h1>
                            <field name="farm_id" readonly="1" force_save="1"/>
                        </h1>
                        <div class="o_row">
                        </div>
                    </div>
                    <notebook>
                        <page string="Main Farm Enterprise">
                            <group>
                                <group>
                                    <field name="growing_crops_subsistence" />
                                    <field name="growing_crops_sale" />
                                    <field name="rearing_livestock_subsistence" />
                                    <field name="rearing_livestock_sale" />
                                </group>
                                <group>
                                    <field name="aquaculture_subsistence" />
                                    <field name="aquaculture_sale" />
                                    <field name="tree_farming" />
                                </group>
                            </group>
                        </page>
                        <page string="Farm Technology and Assets">
                            <group>
                                <group>
                                    <field name="farm_technology_power_source" />
                                    <field name="farm_technology_labor_source" />
                                </group>
                                <group>
                                    <field name="farm_technology_labor_source" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_spp_farm_details" model="ir.actions.act_window">
        <field name="name">Farm Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">spp.farm.details</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Farm Details!
            </p><p>
                Click the create button to enter Farm Details.
            </p>
        </field>
    </record>

    <record id="action_spp_farm_details_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_spp_farm_details_tree" />
        <field name="act_window_id" ref="action_spp_farm_details" />
    </record>
    <record id="action_spp_farm_details_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_spp_farm_details_form" />
        <field name="act_window_id" ref="action_spp_farm_details" />
    </record>

</odoo>
