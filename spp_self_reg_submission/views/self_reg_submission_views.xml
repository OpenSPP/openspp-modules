<odoo>
  <!-- explicit list view definition -->

  <record model="ir.ui.view" id="spp_self_reg_submission_tree">
    <field name="name">spp_self_reg_submission_tree</field>
    <field name="model">spp.self_reg.submission</field>
    <field name="arch" type="xml">
      <tree>
        <field name="domain" />
        <field name="identifier" />
        <field name="timestamp" />
        <field name="form_data" />
        <field name="meta_data" />
        <field name="complete" />
      </tree>
    </field>
  </record>

  <!-- explicit form view definition -->
  <record id="spp_self_reg_submission_form" model="ir.ui.view">
    <field name="name">spp_self_reg_submission_form</field>
    <field name="model">spp.self_reg.submission</field>
    <field name="arch" type="xml">
      <form string="Self Register Submission">
        <sheet>
          <group name="name" string="">
            <field name="domain" />
            <field name="identifier" />
            <field name="timestamp" />
            <field name="form_data" />
            <field name="meta_data" />
            <field name="complete" />
          </group>
        </sheet>
      </form>
    </field>
  </record>


  <!-- actions opening views on models -->

  <record model="ir.actions.act_window" id="spp_self_reg_submission_action">
    <field name="name">Self Register Submission</field>
    <field name="res_model">spp.self_reg.submission</field>
    <field name="view_mode">tree,form</field>
    <field name="help">Create and manage the self reg submission.</field>
  </record>

  <menuitem
        id="menu_self_reg_submission"
        name="Self Register Submission"
        action="spp_self_reg_submission_action"
        parent="g2p_registry_base.g2p_configuration_menu_root"
    />


