<odoo>
    <record id="view_individuals_form_membership" model="ir.ui.view">
        <field name="name">view_individuals_form_membership</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="g2p_registry_individual.view_individuals_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='basic_info']" position="after">
                <page string="Groups">
                    <field
                        name="individual_membership_ids"
                        attrs="{'readonly':[('disabled','!=',False)]}"
                        nolabel="1"
                        colspan="4"
                    >
                        <tree string="Memberships" editable="top">
                            <button
                                name="open_group_form"
                                type="object"
                                icon="fa-external-link"
                                class="btn-success"
                            />
                            <field
                                name="group"
                                domain="[('is_registrant','=',True),('is_group','=',True)]"
                                options="{'no_create':True}"
                                string="Group Name"
                                context="{'form_view_ref':'g2p_registrant.view_groups_form'}"
                            />
                            <field
                                name="kind"
                                widget="many2many_tags"
                                options="{'no_open':True, 'no_create_edit':True}"
                            />
                            <field name="start_date" />
                            <field name="end_date" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
