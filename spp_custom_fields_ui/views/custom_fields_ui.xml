    <menuitem
        id="menu_custom_fields_ui"
        name="Custom Fields"
        action="action_custom_fields_ui"
        parent="g2p_registry_base.g2p_configuration_menu_root"
        sequence="33"
        groups="g2p_registry_base.group_g2p_admin"
    />

</odoo>
