<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_model_fields_form_inherit_spp_custom_filter" model="ir.ui.view">
        <field name="name">ir.model.fields.view.form.inherit</field>
        <field name="model">ir.model.fields</field>
        <field name="inherit_id" ref="base.view_model_fields_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='base']//field[@name='copied']" position="after">
                <field name="allow_filter" groups="base.group_no_one" />
            </xpath>
        </field>
    </record>

</odoo>
