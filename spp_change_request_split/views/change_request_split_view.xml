<odoo>
    <menuitem
        id="menu_change_request_split_root"
        name="Split Member Change Requests"
        parent="spp_change_request.spp_change_request_request_root"
        sequence="14"
    />

    <record id="view_change_request_split_tree" model="ir.ui.view">
        <field name="name">change_request_split_tree</field>
        <field name="model">spp.change.request.split</field>
        <field name="priority">0</field>
        <field name="arch" type="xml">
            <tree sample="1" create="0">
                <field name="change_request_id" />
                <field name="registrant_id" string="Source Group" />
                <field name="registrant_to_split_id" />
                <field name="new_registrant_id" string="Target Group" />
                <field name="create_date" />
                <field name="validatedby_id" widget="many2one_avatar_user" />
                <field name="date_validated" />
                <field
                    name="state"
                    decoration-info="state=='draft'"
                    decoration-primary="state=='pending'"
                    decoration-warning="state=='validated'"
                    decoration-success="state=='applied'"
                    decoration-danger="state=='rejected'"
                    widget="badge"
                />
            </tree>
        </field>
    </record>

    <record id="view_change_request_split_form" model="ir.ui.view">
        <field name="name">view_change_request_split_form</field>
        <field name="model">spp.change.request.split</field>
        <field name="priority">0</field>
        <field name="arch" type="xml">
            <form string="Split Member Change Request">
                <header>
                    <button
                        name="on_validate"
                        type="object"
                        string="Validate"
                        icon="fa-check-square-o"
                        class="btn-warning"
                        states="pending"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_validator"
                    />
                    <button
                        name="apply"
                        type="object"
                        string="Apply Changes"
                        icon="fa-thumbs-o-up"
                        class="btn-success"
                        states="validated"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_administrator"
                    />
                    <button
                        name="on_reject"
                        type="object"
                        string="Reject"
                        icon="fa-ban"
                        class="btn-danger"
                        states="pending"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_administrator"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,pending,validated,applied"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title mb24">
                        <label for="registrant_id" string="Source Group:" />
                        <h1>
                            <field
                                name="registrant_id"
                                options="{'no_create': True,'no_open':True}"
                                attrs="{'readonly':[('state','!=','draft')]}"
                                required="1"
                            />
                        </h1>
                        <div class="o_row">
                            <h2>
                                <label for="request_type" string="Request Type:" />
                                <field name="request_type" readonly="1" />
                            </h2>
                        </div>
                    </div>
                    <group colspan="4" col="4" string="">
                        <field name="validatedby_id" readonly="1" />
                        <field name="date_validated" readonly="1" />
                    </group>
                    <notebook>
                        <page string="Request Details">
                            <group colspan="4" col="4" string="">
                                <field
                                    name="registrant_to_split_id"
                                    required="1"
                                    attrs="{'readonly':[('state','!=','draft')]}"
                                    options="{'no_open':true,'no_create':true,'no_edit':true}"
                                    domain="registrant_to_split_id_domain"
                                    colspan="4"
                                />
                                <field
                                    name="new_registrant_id"
                                    readonly="1"
                                    attrs="{'readonly':[('state','!=','draft')]}"
                                    options="{'no_open':true,'no_create':true,'no_edit':true}"
                                    colspan="4"
                                />
                            </group>
                        </page>
                        <page string="Attachments">
                            <field
                                name="dms_directory_ids"
                                mode="dms_tree"
                                attrs="{'invisible':[('registrant_id','=',False)],'readonly':[('state','!=','draft')]}"
                            />
                        </page>
                        <page string="Validation Sequence" groups="g2p_registry_base.group_g2p_admin">
                            <field
                                name="validation_ids"
                                create="0"
                                nolabel="1"
                                attrs="{'readonly':[('state','not in',('draft','pending'))]}"
                            >
                                <tree>
                                    <field name="sequence" widget="handle" />
                                    <field name="request_type" invisible="1" />
                                    <field name="stage_id" options="{'no_create_edit':true}" />
                                    <field
                                        name="validation_group_id"
                                        string="Validation Group"
                                        domain="[('category_id','=',%(g2p_registry_base.openg2p_module)d)]"
                                        options="{'no_open':true,'no_edit':true,'no_create':true}"
                                    />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <field name="change_request_id" invisible="1" />
                    <field name="registrant_to_split_id_domain" invisible="1" />
                    <field name="split_group_member_ids" invisible="1" />
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_change_request_split_validation_form" model="ir.ui.view">
        <field name="name">view_change_request_split_validation_form</field>
        <field name="model">spp.change.request.split</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="Split Member Change Request">
                <header>
                    <button
                        name="on_validate"
                        type="object"
                        string="Validate"
                        icon="fa-check-square-o"
                        class="btn-warning"
                        states="pending"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_validator"
                    />
                    <button
                        name="apply"
                        type="object"
                        string="Apply Changes"
                        icon="fa-thumbs-o-up"
                        class="btn-success"
                        states="validated"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_administrator"
                    />
                    <button
                        name="on_reject"
                        type="object"
                        string="Reject"
                        icon="fa-ban"
                        class="btn-danger"
                        states="pending"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_administrator"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,pending,validated,applied"
                    />
                </header>

                <!-- Form Body -->
                <div class="oe_button_box" name="button_box">
                </div>
                <group colspan="4" col="4">
                    <!-- Left Panel -->
                    <group colspan="2" col="4" class="o_left_panel">
                        <div class="o_header_label1">
                            <label for="registrant_id" string="Split a Member of Group:" />
                            <h2>
                                <field name="registrant_id" readonly="1" />
                                <button
                                    name="open_registrant_details_form"
                                    type="object"
                                    string="Open Details"
                                    help="Open Details"
                                    icon="fa-external-link "
                                    class="btn-success"
                                    style="margin-left: 10px;"
                                />
                            </h2>
                        </div>
                        <newline />
                        <notebook colspan="2" class="o_container_left">
                            <page string="Source Group Current Members">
                                <field name="split_group_member_ids" readonly="1" nolabel="1">
                                    <tree decoration-danger="individual_id==parent.registrant_to_split_id">
                                        <button
                                            name="open_individual_form"
                                            type="object"
                                            help="Open Member Form"
                                            icon="fa-external-link "
                                            class="btn-success"
                                        />
                                        <field name="group_to_split_id" invisible="1" />
                                        <field name="individual_id" string="Members" />
                                        <field
                                            name="kind_ids"
                                            widget="many2many_tags"
                                            options="{'no_create_edit':True,'no_open':True}"
                                        />
                                        <field name="birthdate" />
                                        <field name="age" />
                                    </tree>
                                    <form string="Group Membership">
                                        <sheet>
                                            <div class="oe_title mb24">
                                                <h1>
                                                    <field
                                                        name="individual_id"
                                                        string="Member"
                                                        options="{'no_open':True}"
                                                        readonly="1"
                                                    />
                                                </h1>
                                                <div class="o_row">
                                                    <label for="kind_ids" string="Membership Types:" />
                                                    <field
                                                        name="kind_ids"
                                                        widget="many2many_tags"
                                                        options="{'no_open':True}"
                                                        readonly="1"
                                                    />
                                                </div>
                                            </div>
                                            <group colspan="4" col="4">
                                                <field name="birthdate" />
                                                <field name="age" />
                                            </group>
                                            <field name="group_to_split_id" invisible="1" />
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                        <newline />
                        <notebook colspan="2" class="o_container_left">
                            <page string="Attachments">
                                <field
                                    name="dms_directory_ids"
                                    mode="dms_tree"
                                    attrs="{'readonly':[('state','!=','draft')]}"
                                />
                            </page>
                        </notebook>
                    </group>

                    <!-- Right Panel -->
                    <group colspan="2" col="4">
                        <div class="o_header_label1">
                            <label for="request_type" string="Request Type:" />
                            <h2>
                                <field name="request_type" readonly="1" />
                            </h2>
                        </div>
                        <newline />
                        <notebook colspan="2" class="o_container_right">
                            <page string="Request Details">
                                <group colspan="4" col="4">
                                    <field name="validatedby_id" readonly="1" />
                                    <field name="date_validated" readonly="1" />
                                </group>
                                <group colspan="4" col="4" string="Individual to Split">
                                    <field
                                        name="registrant_to_split_id"
                                        required="1"
                                        attrs="{'readonly':[('state','!=','draft')]}"
                                        options="{'no_open':true,'no_create':true,'no_edit':true}"
                                        domain="registrant_to_split_id_domain"
                                    />
                                    <field
                                        name="new_registrant_id"
                                        readonly="1"
                                        options="{'no_open':true,'no_create':true,'no_edit':true}"
                                    />
                                </group>
                            </page>
                            <page string="Validation Sequence" groups="g2p_registry_base.group_g2p_admin">
                                <field
                                    name="validation_ids"
                                    create="0"
                                    nolabel="1"
                                    attrs="{'readonly':[('state','not in',('draft','pending'))]}"
                                >
                                    <tree>
                                        <field name="sequence" widget="handle" />
                                        <field name="request_type" invisible="1" />
                                        <field name="stage_id" options="{'no_create_edit':true}" />
                                        <field
                                            name="validation_group_id"
                                            string="Validation Group"
                                            domain="[('category_id','=',%(g2p_registry_base.openg2p_module)d)]"
                                            options="{'no_open':true,'no_edit':true,'no_create':true}"
                                        />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                    <field name="change_request_id" invisible="1" />
                    <field name="registrant_to_split_id_domain" invisible="1" />
                </group>
            </form>
        </field>
    </record>

    <record id="change_request_split_filter" model="ir.ui.view">
        <field name="name">change_request_split_filter</field>
        <field name="model">spp.change.request.split</field>
        <field name="priority" eval="1" />
        <field name="arch" type="xml">
            <search string="Search Change Request: Split Member">
                <field name="registrant_id" string="Source Group" />
                <field name="registrant_to_split_id" string="Registrant to Split" />
                <field name="new_registrant_id" string="Destination Group" />
            </search>
        </field>
    </record>

    <!-- All Split Member Change Requests -->
    <record id="action_change_request_split" model="ir.actions.act_window">
        <field name="name">Split Member Change Request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">spp.change.request.split</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="change_request_split_filter" />
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No 'Split Member' change requests found!
            </p><p>
                There are no records found based on the current filter.
            </p>
        </field>
    </record>

    <record id="action_change_request_split_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_change_request_split_tree" />
        <field name="act_window_id" ref="action_change_request_split" />
    </record>

    <record id="action_change_request_split_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_change_request_split_validation_form" />
        <field name="act_window_id" ref="action_change_request_split" />
    </record>

    <menuitem
        id="menu_change_request_split"
        name="All Split Member Requests"
        action="action_change_request_split"
        parent="menu_change_request_split_root"
        sequence="0"
        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_administrator"
    />

    <!-- Pending Validation -->
    <record id="action_change_request_split_pending" model="ir.actions.act_window">
        <field name="name">Pending Validation: Split Member</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">spp.change.request.split</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="change_request_split_filter" />
        <field name="context">{}</field>
        <field name="domain">[('state','=','pending')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No pending 'Split Member' change requests found!
            </p><p>
                There are no records found based on the current filter.
            </p>
        </field>
    </record>

    <record id="action_change_request_split_pending_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_change_request_split_tree" />
        <field name="act_window_id" ref="action_change_request_split_pending" />
    </record>

    <record id="action_change_request_split_pending_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_change_request_split_validation_form" />
        <field name="act_window_id" ref="action_change_request_split_pending" />
    </record>

    <menuitem
        id="menu_change_request_split_pending"
        name="Pending Validation"
        action="action_change_request_split_pending"
        parent="menu_change_request_split_root"
        sequence="10"
        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_validator"
    />

</odoo>
