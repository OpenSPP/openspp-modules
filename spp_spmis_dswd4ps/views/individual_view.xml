        <field name="priority">200</field>
        <field name="inherit_id" ref="spp_programs.view_registrant_ext_form_custom_spp" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inkind_entitlement']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
