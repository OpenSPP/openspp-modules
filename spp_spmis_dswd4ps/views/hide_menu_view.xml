<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Hide Discuss Menu -->
    <record model="ir.ui.menu" id="mail.menu_root_discuss">
        <field name="groups_id" eval="[(5,ref('theme_openspp_muk.hide_menu'))]" />
    </record>
    <menuitem name="Discuss" id="mail.menu_root_discuss" groups="theme_openspp_muk.hide_menu" />

    <!-- Hide Job Queue Menu -->
    <record model="ir.ui.menu" id="queue_job.menu_queue_job_root">
        <field name="groups_id" eval="[(5,ref('theme_openspp_muk.hide_menu'))]" />
    </record>
    <menuitem id="queue_job.menu_queue_job_root" name="Job Queue" groups="theme_openspp_muk.hide_menu" />

    <!-- Hide Dashboard Menu -->
    <record model="ir.ui.menu" id="spreadsheet_dashboard.spreadsheet_dashboard_menu_root">
        <field name="groups_id" eval="[(5,ref('theme_openspp_muk.hide_menu'))]" />
    </record>
    <menuitem
        id="spreadsheet_dashboard.spreadsheet_dashboard_menu_root"
        name="Dashboards"
        groups="theme_openspp_muk.hide_menu"
    />
</odoo>
