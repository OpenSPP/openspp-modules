<odoo>
    <!-- Datasource view-->

    <record id="view_spp_datasource_form" model="ir.ui.view">
        <field name="name">view_spp_datasource_form</field>
        <field name="model">spp.datasource</field>
        <field name="inherit_id" ref="spp_additional_data.view_spp_datasource_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
              <notebook>
                <page string="Photos">
                    <field
                            name="image_ids"
                            nolabel="1"
                            mode="kanban"
                            context="{'default_owner_model':'spp.datasource'}"
                        />
                </page>
              </notebook>
            </xpath>
        </field>
    </record>

</odoo>
