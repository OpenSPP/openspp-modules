<odoo>
    <!-- individuals view-->

    <record id="view_registrant_photo_form" model="ir.ui.view">
        <field name="name">view_registrant_photo_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="g2p_registry_individual.view_individuals_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other']" position="before">
                <page string="Photos">
                    <field
                        name="image_ids"
                        nolabel="1"
                        mode="kanban"
                        context="{'default_owner_model':'res.partner'}"
                    />
                </page>
            </xpath>
        </field>
    </record>

    <!-- groups view-->

    <record id="view_group_photo_form" model="ir.ui.view">
        <field name="name">view_group_photo_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="g2p_registry_group.view_groups_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other']" position="before">
                <page string="Photos">
                    <field
                        name="image_ids"
                        nolabel="1"
                        mode="kanban"
                        context="{'default_owner_model':'res.partner'}"
                    />
                </page>
            </xpath>
        </field>
    </record>

</odoo>
