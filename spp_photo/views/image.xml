<odoo>
    <!-- Image view-->

    <record id="image_form_view" model="ir.ui.view">
        <field name="name">image_form_view</field>
        <field name="model">base_multi_image.image</field>
        <field name="inherit_id" ref="base_multi_image.image_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='storage']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='storage']" position="after">
                <field name="storage_select" string="Storage" />
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="photo_category_id" string="Image Category" />
            </xpath>
        </field>
    </record>

    <record id="image_kanban_view" model="ir.ui.view">
        <field name="name">image_kanban_view</field>
        <field name="model">base_multi_image.image</field>
        <field name="inherit_id" ref="base_multi_image.image_kanban_view" />
        <field name="arch" type="xml">
            <xpath expr="//div/div/div" position="attributes">
              <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div/div/div" position="after">
              <div class="oe_module_desc">
                  <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_color_border">
                      <table class="oe_kanban_table">
                          <tr>
                              <td class="oe_kanban_title1" align="left" valign="middle">
                                  <h4>
                                      <a type="open">
                                          <field name="name" />
                                      </a>
                                  </h4>
                                  <field name="photo_category_id" />
                              </td>
                          </tr>
                      </table>
                  </div>
              </div>
            </xpath>
        </field>
    </record>
</odoo>
