<odoo>
    <record id="set_pin_wizard_form_view" model="ir.ui.view">
        <field name="name">set_pin_wizard_form_view</field>
        <field name="model">spp.set.pin.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <label for="registrant_id" string="Registrant" />
                        </h1>
                        <h1>
                            <field name="registrant_id" readonly="1" />
                        </h1>
                        <h1>
                            <label for="reg_id_pds" string="PDS" />
                        </h1>
                        <h1>
                            <field name="reg_id_pds" readonly="1" />
                        </h1>
                        <div class="o_row">
                        </div>
                    </div>
                    <group>
                      <field name="pin_code" placeholder="000000" password="True" />
                      <field name="pin_code_confirm" placeholder="000000" password="True" />
                    </group>
                </sheet>
                <footer>
                    <button name="set_pin" string="Set PIN" type="object" class="oe_highlight" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
