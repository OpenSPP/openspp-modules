<odoo>
    <menuitem
        id="menu_change_request_add_farmer_root"
        name="Add Farmer Change Requests"
        parent="spp_change_request.spp_change_request_request_root"
        sequence="10"
    />

    <record id="view_change_request_add_farmer_tree" model="ir.ui.view">
        <field name="name">change_request_add_farmer_tree</field>
        <field name="model">spp.change.request.add.farmer</field>
        <field name="priority">0</field>
        <field name="arch" type="xml">
            <tree sample="1" create="0">
                <field name="change_request_id" />
                <field name="registrant_id" string="Group" />
                <field name="full_name" />
                <field name="gender" />
                <field name="kind" widget="many2many_tags" />
                <field name="create_date" />
                <field name="last_validated_by_id" widget="many2one_avatar_user" />
                <field name="date_validated" />
                <field
                    name="state"
                    decoration-info="state=='draft'"
                    decoration-primary="state=='pending'"
                    decoration-warning="state=='validated'"
                    decoration-success="state=='applied'"
                    decoration-danger="state=='rejected'"
                    widget="badge"
                />
            </tree>
        </field>
    </record>

    <record id="view_change_request_add_farmer_form" model="ir.ui.view">
        <field name="name">view_change_request_add_farmer_form</field>
        <field name="model">spp.change.request.add.farmer</field>
        <field name="priority">0</field>
        <field name="arch" type="xml">
            <form string="Add Farmer Change Request">
                <header>
                    <button
                        name="action_submit"
                        type="object"
                        string="Request Validation"
                        icon="fa-paper-plane"
                        class="btn-primary"
                        invisible="state != 'draft'"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_agent"
                    />
                    <button
                        name="action_validate"
                        type="object"
                        string="Validate"
                        icon="fa-check-square-o"
                        title="Validate Change Request"
                        class="btn-warning"
                        invisible="state != 'pending'"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_validator,spp_change_request.group_spp_change_request_hq_validator"
                    />
                    <button
                        name="action_apply"
                        type="object"
                        string="Apply Changes"
                        icon="fa-thumbs-o-up"
                        class="btn-success"
                        invisible="state != 'validated'"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_administrator,spp_change_request.group_spp_change_request_applicator"
                    />
                    <button
                        name="action_reject"
                        type="object"
                        string="Reject"
                        icon="fa-ban"
                        title="Reject Change Request"
                        class="btn-danger"
                        invisible="state != 'pending'"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_administrator,spp_change_request.group_spp_change_request_validator,spp_change_request.group_spp_change_request_hq_validator"
                    />
                    <button
                        name="action_cancel"
                        type="object"
                        string="Cancel Change Request"
                        icon="fa-times-circle"
                        class="btn-default"
                        invisible="state not in ['draft', 'pending', 'rejected', 'validated']"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_administrator,spp_change_request.group_spp_change_request_agent"
                    />
                    <button
                        name="action_reset_to_draft"
                        type="object"
                        string="Reset to Draft"
                        icon="fa-rotate-left"
                        class="btn-success"
                        invisible="state != 'rejected'"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_administrator,spp_change_request.group_spp_change_request_agent"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,pending,validated,applied"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="open_user_assignment_wiz"
                            type="object"
                            icon="fa-user-circle"
                            class="oe_stat_button"
                            invisible="state not in ['pending', 'validated']"
                            groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_validator,spp_change_request.group_spp_change_request_applicator"
                        >
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_text">Assign</span>
                                <span class="o_stat_text">To Me</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title mb24">
                        <label for="registrant_id" string="Add to Group:" />
                        <h1>
                            <field
                                name="registrant_id"
                                options="{'no_create': True,'no_open':True}"
                                readonly="1"
                                class="oe_inline"
                            />
                            <button
                                name="open_registrant_details_form"
                                type="object"
                                icon="fa-external-link "
                                title="Open Registrant Details"
                                class="btn-success"
                                style="margin-left: 10px;"
                                invisible="not registrant_id"
                            />
                        </h1>
                        <label for="applicant_id" string="Applicant:" />
                        <h2>
                            <field
                                name="applicant_id"
                                options="{'no_create': True,'no_open':True}"
                                readonly="1"
                                class="oe_inline"
                            />
                            <button
                                name="open_applicant_details_form"
                                type="object"
                                icon="fa-external-link "
                                title="Open Applicant Details"
                                class="btn-success"
                                style="margin-left: 10px;"
                                invisible="not registrant_id"
                            />
                        </h2>
                        <div class="o_row">
                            <h2>
                                <label for="request_type" string="Request Type:" />
                                <field name="request_type" readonly="1" />
                            </h2>
                        </div>
                    </div>
                    <notebook>
                        <page string="Request Details">
                            <!-- widget is currently not working -->
                            <!-- <field
                                name="id_document_details"
                                widget="id_document_reader_field"
                                colspan="4"
                                invisible="state != 'draft'"
                            /> -->
                            <div style="width: 100%; padding-top: 10px; padding-left: 10px; ">
                                <h3>Farmer Details</h3>
                                <table style="height: 50px; width:100%; vertical-align: top; text-align: left;">
                                    <tr>
                                        <td style="height:100%; width:15%;" />
                                        <td style="width:5%;" />
                                        <td style="width:20%;" />
                                        <td style="width:20%;" />
                                        <td style="width:20%;" />
                                        <td style="width:20%;" />
                                    </tr>
                                    <tr>
                                        <td
                                            rowspan="4"
                                            style="height:100%; width:15%; vertical-align: top; text-align: center;"
                                        >
                                            <field
                                                name="image_1920"
                                                widget="image"
                                                options="{'preview_image': 'avatar_512'}"
                                            />
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                            <span>
                                                National ID Number
                                            </span>
                                            <br />
                                            <field name="farmer_national_id" />
                                        </td>
                                        <td>
                                            <span>
                                                Family Name
                                            </span>
                                            <br />
                                            <field name="family_name" />
                                        </td>
                                        <td>
                                            <span>
                                                Given Name
                                            </span>
                                            <br />
                                            <field name="given_name" />
                                        </td>
                                        <td>
                                            <span>
                                                Additional Name
                                            </span>
                                            <br />
                                            <field name="addl_name" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                        </td>
                                        <td>
                                            <span>
                                                Marital Status
                                            </span>
                                            <br />
                                            <field name="marital_status" />
                                        </td>
                                        <td>
                                            <span>
                                                Gender
                                            </span>
                                            <br />
                                            <field name="gender" />
                                        </td>
                                        <td>
                                            <span>
                                                Date of Birth
                                            </span>
                                            <br />
                                            <field name="birthdate" />
                                        </td>
                                        <td>
                                            <span>
                                                Household Size
                                            </span>
                                            <br />
                                            <field name="farmer_household_size" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                        </td>
                                        <td>
                                            <span>
                                                Postal Address
                                            </span>
                                            <br />
                                            <field name="farmer_postal_address" />
                                        </td>
                                        <td>
                                            <span>
                                                Educational Level
                                            </span>
                                            <br />
                                            <field name="highest_education_level" />
                                        </td>
                                        <td>
                                            <span>
                                                Years of Experience
                                            </span>
                                            <br />
                                            <field name="experience_years" />
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </page>
                        <page string="Attachments">
                            <!-- Attachment UI -->
                            <header invisible="state != 'draft'">
                                <button
                                    name="action_attach_documents"
                                    type="object"
                                    string="Request Form"
                                    class="btn-primary"
                                    context="{'category_id':%(spp_dms_add_farmer)d}"
                                    style="margin-left: 10px;"
                                />
                                <button
                                    name="action_attach_documents"
                                    type="object"
                                    string="Birth Certificate"
                                    class="btn-primary"
                                    context="{'category_id':%(spp_change_request.spp_dms_birth_certificate)d}"
                                    style="margin-left: 10px;"
                                />
                                <button
                                    name="action_attach_documents"
                                    type="object"
                                    string="Other Documents"
                                    class="btn-warning"
                                    style="margin-left: 10px;"
                                />
                            </header>
                            <field
                                name="dms_file_ids"
                                readonly="state != 'draft'"
                                nolabel="1"
                                context="{'form_view_ref':'spp_change_request.view_dms_file_spp_custom_form'}"
                            >
                                <tree js_class="file_list" multi_edit="1" create="0">
                                    <field name="name" column_invisible="1" />
                                    <field
                                        name="content"
                                        filename="name"
                                        mimetype="mimetype"
                                        widget="preview_binary"
                                        string="File"
                                    />
                                    <field name="category_id" />
                                    <field name="directory_id" />
                                    <field name="mimetype" />
                                    <field name="size" widget="integer" />
                                    <field name="write_date" />
                                </tree>
                            </field>
                        </page>
                        <page string="Validation Sequence" groups="g2p_registry_base.group_g2p_admin">
                            <field
                                name="validation_ids"
                                nolabel="1"
                                readonly="state not in ('draft','pending')"
                            >
                                <tree>
                                    <field name="sequence" widget="handle" />
                                    <field name="request_type" column_invisible="1" />
                                    <field name="stage_id" options="{'no_create_edit':true}" />
                                    <field
                                        name="validation_group_id"
                                        string="Validation Group"
                                        domain="[('category_id','=',%(g2p_registry_base.openg2p_module)d)]"
                                        options="{'no_open':true,'no_edit':true,'no_create':true}"
                                    />
                                </tree>
                            </field>
                        </page>
                        <page string="Other Information">
                            <group colspan="6" col="6">
                                <group colspan="2">
                                    <field
                                        name="change_request_id"
                                        string="Request No."
                                        readonly="1"
                                        options="{'no_open':True}"
                                    />
                                </group>
                                <group colspan="2">
                                    <field
                                        name="assign_to_id"
                                        string="Assigned To"
                                        options="{'no_open':True}"
                                        readonly="1"
                                    />
                                </group>
                                <group colspan="2">
                                    <field
                                        name="applicant_phone"
                                        string="Applicant's Phone #"
                                        required="1"
                                        widget="phone"
                                        options="{'enable_sms': false}"
                                        readonly="state != 'draft'"
                                    />
                                </group>
                            </group>
                            <group colspan="4" col="4">
                                <group colspan="2">
                                    <field name="last_validated_by_id" readonly="1" />
                                </group>
                                <group colspan="2">
                                    <field name="date_validated" readonly="1" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <field name="group_member_ids" invisible="1" />
                    <field name="dms_directory_ids" invisible="1" />
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_change_request_add_farmer_validation_form" model="ir.ui.view">
        <field name="name">view_change_request_add_farmer_validation_form</field>
        <field name="model">spp.change.request.add.farmer</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="Add Farmer Change Request" edit="0">
                <header>
                    <button
                        name="open_user_assignment_wiz"
                        type="object"
                        icon="fa-user-circle"
                        class="btn-primary"
                        string="Assign To Me"
                        invisible="current_user_assigned or state not in ('draft', 'pending','validated', 'rejected')"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_validator,spp_change_request.group_spp_change_request_applicator"
                    />
                    <button
                        name="open_user_assignment_to_wiz"
                        type="object"
                        icon="fa-user-circle"
                        class="btn-primary"
                        string="Reassign"
                        invisible="not current_user_assigned or state not in ('pending','validated')"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_validator,spp_change_request.group_spp_change_request_applicator"
                    />
                    <button
                        name="action_submit"
                        type="object"
                        string="Request Validation"
                        icon="fa-paper-plane"
                        class="btn-primary"
                        invisible="state != 'draft'"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_agent"
                    />
                    <button
                        name="action_validate"
                        type="object"
                        string="Validate"
                        icon="fa-check-square-o"
                        title="Validate Change Request"
                        class="btn-warning"
                        invisible="state != 'pending'"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_validator,spp_change_request.group_spp_change_request_hq_validator"
                    />
                    <button
                        name="action_apply"
                        type="object"
                        string="Apply Changes"
                        icon="fa-thumbs-o-up"
                        class="btn-success"
                        invisible="state != 'validated'"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_administrator,spp_change_request.group_spp_change_request_applicator"
                    />
                    <button
                        name="action_reject"
                        type="object"
                        string="Reject"
                        icon="fa-ban"
                        title="Reject Change Request"
                        class="btn-danger"
                        invisible="state != 'pending'"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_administrator,spp_change_request.group_spp_change_request_validator,spp_change_request.group_spp_change_request_hq_validator"
                    />
                    <button
                        name="action_cancel"
                        type="object"
                        string="Cancel Change Request"
                        icon="fa-times-circle"
                        class="btn-default"
                        invisible="state not in ['draft', 'pending', 'rejected', 'validated']"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_administrator,spp_change_request.group_spp_change_request_agent"
                    />
                    <button
                        name="action_reset_to_draft"
                        type="object"
                        string="Reset to Draft"
                        icon="fa-rotate-left"
                        class="btn-success"
                        invisible="state != 'rejected'"
                        groups="g2p_registry_base.group_g2p_admin,spp_change_request.group_spp_change_request_administrator,spp_change_request.group_spp_change_request_agent"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,pending,validated,applied"
                    />
                </header>
                <sheet>
                <!-- Form Body -->
                <div class="oe_button_box" name="button_box">
                </div>
                <group colspan="4" col="4">
                    <!-- Left Panel -->
                    <group colspan="2" col="2" class="o_left_panel">
                        <div class="o_header_label1" colspan="2">
                            <label for="registrant_id" string="ADD CHILD/MEMBER TO GROUP:" />
                            <h2>
                                <field name="registrant_id" readonly="1" options="{'no_open':True}" />
                                <button
                                        name="open_registrant_details_form"
                                        type="object"
                                        string="Open Details"
                                        icon="fa-external-link "
                                        title="Open Details"
                                        class="btn-success"
                                        style="margin-left: 10px;"
                                        invisible="not registrant_id"
                                    />
                            </h2>
                        </div>
                        <newline />
                        <notebook colspan="2" class="o_container_left">
                            <page string="TARGET GROUP INFORMATION">
                                <group colspan="2" col="2" name="target_group">
                                    <field name="group_address" colspan="2" string="Address:" />
                                    <field name="group_registration_date" string="Registration Date:" />
                                </group>
                                <group
                                        colspan="2"
                                        col="2"
                                        string="Current Group Members"
                                        name="group_members"
                                    >
                                    <field name="group_member_ids" readonly="1" nolabel="1" colspan="2">
                                        <tree>
                                            <button
                                                    name="open_individual_form"
                                                    type="object"
                                                    help="Open Member Form"
                                                    icon="fa-external-link "
                                                    title="Open Member Form"
                                                    class="btn-success"
                                                />
                                            <field name="group_add_farmer_id" column_invisible="1" />
                                            <field name="individual_id" string="Members" />
                                            <field
                                                    name="kind_ids"
                                                    widget="many2many_tags"
                                                    options="{'no_open':True}"
                                                />
                                        </tree>
                                        <form string="Group Membership">
                                            <sheet>
                                                <div class="oe_title mb24">
                                                    <h1>
                                                        <field
                                                                name="individual_id"
                                                                string="Member"
                                                                options="{'no_open':True}"
                                                                readonly="1"
                                                            />
                                                    </h1>
                                                    <div class="o_row">
                                                        <label for="kind_ids" string="Membership Types:" />
                                                        <field
                                                                name="kind_ids"
                                                                widget="many2many_tags"
                                                                options="{'no_open':True}"
                                                                readonly="1"
                                                            />
                                                    </div>
                                                </div>
                                                <group colspan="4" col="4">
                                                    <field name="phone" readonly="1" />
                                                    <field name="birthdate" readonly="1" />
                                                    <field name="age" readonly="1" />
                                                </group>
                                                <field name="group_add_farmer_id" invisible="1" />
                                            </sheet>
                                        </form>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </group>
                    <!-- Right Panel -->
                    <group colspan="2" col="2" class="o_right_panel">
                        <div class="o_header_label1" colspan="2">
                            <label for="request_type" string="Request Type:" />
                            <h2>
                                <field name="request_type" readonly="1" />
                            </h2>
                        </div>
                        <newline />
                        <notebook colspan="2" class="o_container_right">
                            <page string="Request Details">
                                <group colspan="2" col="2" string="Applicant Information">
                                    <div colspan="2">
                                        <label for="applicant_id" string="Applicant:" />
                                        <h3>
                                            <field
                                                    name="applicant_id"
                                                    options="{'no_create': True,'no_open':True}"
                                                    readonly="1"
                                                    class="oe_inline"
                                                />
                                            <button
                                                    name="open_applicant_details_form"
                                                    type="object"
                                                    icon="fa-external-link"
                                                    title="Open Applicant Details"
                                                    class="btn-success oe_inline"
                                                    invisible="not applicant_id"
                                                    style="padding-left: 10px !important;"
                                                />
                                        </h3>
                                    </div>
                                    <field
                                            name="applicant_phone"
                                            string="Phone No."
                                            readonly="1"
                                            widget="phone"
                                            options="{'enable_sms': false}"
                                        />
                                </group>
                                <group colspan="2" col="2" string="New Information">
                                    <field name="full_name" readonly="1" class="oe_read_only" />
                                    <field name="family_name" readonly="1" class="oe_edit_only" />
                                    <field name="given_name" readonly="1" class="oe_edit_only" />
                                    <field name="addl_name" readonly="1" class="oe_edit_only" />
                                    <field name="gender" readonly="1" />
                                    <field
                                            name="phone"
                                            readonly="1"
                                            widget="phone"
                                            options="{'enable_sms': false}"
                                        />
                                    <field name="experience_years" readonly="1" />
                                    <field name="formal_agricultural_training" readonly="1" />
                                    <field name="farmer_national_id" readonly="1" />
                                    <field name="farmer_household_size" readonly="1" />
                                    <field name="farmer_postal_address" readonly="1" />
                                    <field name="marital_status" readonly="1" />
                                    <field name="highest_education_level" readonly="1" />
                                    <field name="uid_number" readonly="1" />
                                    <field name="birth_place" readonly="1" />
                                    <field name="birthdate_not_exact" readonly="1" />
                                    <field name="birthdate" readonly="1" />
                                    <field
                                            name="kind"
                                            widget="many2many_tags"
                                            options="{'no_open':True}"
                                            readonly="1"
                                        />
                                </group>
                            </page>
                            <page string="Attachments">
                                <field
                                        name="dms_file_ids"
                                        readonly="1"
                                        nolabel="1"
                                        context="{'form_view_ref':'spp_change_request.view_dms_file_spp_custom_form'}"
                                    >
                                    <tree js_class="file_list" multi_edit="1" create="0">
                                        <field name="name" column_invisible="1" />
                                        <field
                                                name="content"
                                                filename="name"
                                                mimetype="mimetype"
                                                widget="preview_binary"
                                                string="File"
                                            />
                                        <field name="category_id" />
                                        <field name="directory_id" />
                                        <field name="mimetype" column_invisible="1" />
                                        <field name="size" widget="integer" />
                                        <field name="write_date" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Other Information">
                                <group colspan="2" col="2">
                                    <field
                                            name="change_request_id"
                                            string="Request No."
                                            readonly="1"
                                            options="{'no_open':True}"
                                        />
                                    <field
                                            name="assign_to_id"
                                            string="Assigned To"
                                            options="{'no_open':True}"
                                            readonly="1"
                                        />
                                    <field name="current_user_assigned" invisible="1" />
                                    <field name="last_validated_by_id" readonly="1" />
                                    <field name="date_validated" readonly="1" />
                                </group>
                            </page>
                        </notebook>
                    </group>
                </group>
                </sheet>
            </form>
        </field>
